@model IReadyonlineexam.Models.Job_Master

@{
    ViewBag.Title = "Jobmaster";
    Layout = "~/Views/Contributor/Shared/_ContributorLayoutPage.cshtml";
}
@if (TempData["result"] != null)
{
    <script>
        alert("@TempData["result"]");
    </script>
}


<h4>Job master</h4>



<div id="rootwizard" class="wizard wizard-full-width">

    <form action="#" method="POST" name="wizard_form">

        <div class="wizard-content tab-content">

            <div class="tab-pane active" id="tab1">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.JobID)
                    <div class="row">

                        <div class="col-md-6 offset-md-3">
                            <p class="desc m-b-20"></p>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <label class="control-label">Year</label>


                                @Html.DropDownListFor(model => model.year, (IEnumerable<SelectListItem>)ViewBag.selectedyear, "----Select Year----", new { @class = "form-control", required = "required" })

                            </div>
                            <div class="form-group">
                                <label class="control-label">Category</label>
                                @Html.DropDownListFor(Model => Model.Course, (IEnumerable<SelectListItem>)ViewBag.selectedcourse as SelectList, new { @class = "form-control", required = "required" })

                            </div>


                            <div class="form-group">
                                <label class="control-label">Designation<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            </div>
                            <div class="form-group">
                                <label class="control-label">Company Name<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Company_Name, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            </div>
                            <div class="form-group">
                                <label class="control-label">Job Description<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @rows = 5, required = "required" } })
                            </div>
                            <div class="form-group">
                                <label class="control-label">Interview Date<span class="text-danger">*</span></label>
                                <input type="date" id="interviewdate" name="interviewdate" class="form-control" required="required" />

                            </div>

                            <div class="form-group">
                                <label class="control-label">Interview Location<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control", @rows = 5, required = "required" } })
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>

                        </div>
                    </div>

                }

                <div class="panel-body">
                    <h3>Job Post Master</h3>
                    <center>
                        <table class="table table-striped m-b-0">
                            <tr>
                                <th>
                                    Year
                                </th>
                                <th>
                                    Course
                                </th>


                                <th>
                                    Designation
                                </th>
                                <th>
                                    Company Name
                                </th>
                                <th>
                                    Job Description
                                </th>
                                <th>
                                    Scheduled Date
                                </th>
                                <th>
                                    Location
                                </th>
                                <th>
                                    Created Date
                                </th>
                                <th>Edit | Delete</th>
                            </tr>

                            @foreach (var item in ViewBag.list)
                            {
                                <tr>
                                    <td>
                                        @item.YearName
                                    </td>
                                    <td>
                                        @item.CourseName
                                    </td>

                                    <td>
                                        @item.Designation
                                    </td>
                                    <td>
                                        @item.CompanyName
                                    </td>
                                    <td>
                                        @item.JobDescription
                                    </td>
                                    <td>
                                        @item.InterviewDate
                                    </td>
                                    <td>
                                        @item.InterviewLocation
                                    </td>
                                    <td>
                                        @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.CreatedDate))

                                    </td>

                                    <td>
                                        @Html.ActionLink("Edit", "EditJobUploaded", new { id = item.JobID }) |

                                        @Html.ActionLink("Delete", "DeleteJobUploaded", new { id = item.JobID })
                                    </td>



                                </tr>
                            }

                        </table>
                    </center>

                </div>
            </div>
        </div>

    </form>

</div>