@model IReadyonlineexam.Models.ContributorProfile

@{
    ViewBag.Title = "CreateProfile";
    Layout = "~/Views/Account/Shared/_AccountLayoutPage.cshtml";
}

<style type="text/css">

    .textarea {
        background: rgba(255, 255, 255, 0.3);
        border-color: transparent;
        color: rgb(255, 255, 255);
        width: 100%;
        padding: 0.375rem 0.75rem;
        overflow: auto;
        resize: vertical;
    }
</style>

@Html.Raw(TempData["AlertBox"])

<!-- BEGIN register -->
<div class="register">
    <!-- BEGIN register-cover -->
    <div class="register-cover"></div>
    
    
    <div class="register-content">
       
        <div class="register-brand">
            <a href="#"><span class="logo"><i class="ti-infinite"></i></span> IreadyToday</a>
        </div>
     
        <h3 class="m-b-20"><span>Profile</span></h3>
        <br />

        @using (Html.BeginForm("CreateProfile", "Contributor", FormMethod.Post, new { FileUpload = "FileUpload", enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.AntiForgeryToken()

            <div class="row row-space-20">
                
                <div class="col-md-6">
                    @{ if (Model.Image != null)
                        {
                            <img src="~/Content/Profile/@Model.Image" alt="Image" class="old img-thumbnail profile-header-img" style="border-radius: 50%;" />
                        }
                    }
                    <img src='@("/Content/Upload/Profile" + 12 + "/photo")' alt="" id="instrumentImage" class="new img-thumbnail profile-header-img" style="border-radius: 50%;display:none;" required="required" />
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Profile Image <span class="text-danger">*</span></label>
                        <input type="file" id="FileUpload" name="FileUpload" placeholder="Upload Image" class="form-control text-box single-line" accept="image/*" onchange="previewImage(event)" />
                    </div>
                </div>

            </div>

            <hr />

            <div class="row row-space-20">

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">First Name <span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = " Name", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">EmailID <span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @readonly = "true", required = "required" } })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Website <span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.Website, new { htmlAttributes = new { @class = "form-control", @placeholder = "Website", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    
                    <div class="form-group">
                        <label class="control-label">Contact Number <span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.PhoneNo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contact No", required = "required" } })
                        @Html.ValidationMessageFor(model => model.PhoneNo, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Date of Birth <span class="text-danger">*</span></label>
                        @if (Model.DOB != null)
                        {<p>@(((DateTime)Model.DOB).ToString("yyyy-MM-dd"))</p>}
                        <input type="date" id="DOB" name="DOB" placeholder="select DOB" class="form-control text-box single-line" required="required" />
                    </div>
                    @*<div class="form-group">
                        <label class="control-label">Category</label>
                        @Html.DropDownListFor(Model => Model.CourseID, (IEnumerable<SelectListItem>)ViewBag.selectedcourse as SelectList, new { @class = "form-control", required = "required" })

                    </div>*@
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">Skills <span class="text-danger">*</span></label>

                        @Html.TextAreaFor(model => model.Skills, new { @class = "form-control textarea", @placeholder = "Skills", required = "required" })

                        @Html.ValidationMessageFor(model => model.Skills, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Name Of Institute <span class="text-danger">*</span></label>
                        @Html.TextAreaFor(model => model.Institution_Name, new { @class = "form-control textarea", @placeholder = "Name Of Institute", required = "required" })


                        @Html.ValidationMessageFor(model => model.Institution_Name, "", new { @class = "text-danger", required = "required" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Experience <span class="text-danger">*</span></label>
                        @Html.TextAreaFor(model => model.Experience, new { @class = "form-control textarea", @placeholder = "Experience", required = "required" })


                        @Html.ValidationMessageFor(model => model.Experience, "", new { @class = "text-danger", required = "required" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Current Position[Industry/Institute] <span class="text-danger">*</span></label>
                        @Html.TextAreaFor(model => model.Current_Position, new { @class = "form-control textarea", @placeholder = "Current Position[Industry/Institute]", required = "required" })


                        @Html.ValidationMessageFor(model => model.Current_Position, "", new { @class = "text-danger", required = "required" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Address <span class="text-danger">*</span></label>
                        @Html.TextAreaFor(model => model.Address, new { @class = "form-control textarea", @placeholder = "Address", required = "required" })


                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger", required = "required" })
                    </div>
                </div>

            </div>
          

            <input type="submit" value="Create" class="btn btn-primary" />

        }
       
    </div>

</div>



<script>
    function previewImage(event) {
        // Get a reference to the image element
        var image = document.querySelector("#instrumentImage");
        // Set its source to the file in the <input type=file element
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>

<script type="text/javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#FileUpload").click(function () {
            $(".old").hide();
            $(".new").show("slow");
        });
    });
</script>