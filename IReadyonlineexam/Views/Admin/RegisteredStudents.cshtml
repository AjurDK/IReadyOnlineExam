@model IEnumerable<IReadyonlineexam.Models.StudentProfile>

@{
    ViewBag.Title = "RegisteredStudents";
    Layout = "~/Views/Admin/Shared/_AdminLayoutPage.cshtml";
}

<h4>Registered Students</h4>


<div id="rootwizard" class="wizard wizard-full-width">

    <form action="#" method="POST" name="wizard_form">

        <div class="wizard-content tab-content">

            <div class="tab-pane active" id="tab1">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">

                        <div class="col-md-6 offset-md-3">
                            <p class="desc m-b-20"></p>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </div>

                }

                    <div class="panel-body">
                        @if (ViewBag.RegStudents != null)
                        {
                            <center>
                                <table class="table table-striped m-b-0">
                                    <tr>

                                        <th>
                                            Name
                                        </th>

                                        <th>
                                            Gender
                                        </th>
                                        <th>
                                            DOB
                                        </th>
                                        <th>
                                            Mobile Number
                                        </th>
                                        <th>
                                            Email ID
                                        </th>

                                        <th>
                                            Category
                                        </th>
                                        <th>
                                            Semester
                                        </th>

                                        <th>
                                            Address
                                        </th>
                                        <th>
                                            Created Date
                                        </th>
                                    </tr>

                                    @foreach (var item in ViewBag.RegStudents)
                                    {
                                        <tr>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                @item.Gender
                                            </td>
                                            <td>
                                                @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.DOB))
                                            </td>
                                            <td>
                                                @item.MobileNumber
                                            </td>
                                            <td>
                                                @item.Email
                                            </td>

                                            <td>
                                                @item.CourseName
                                            </td>
                                            <td>
                                                @item.SemName
                                            </td>

                                            <td>
                                                @item.Address
                                            </td>
                                            <td>
                                                @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.CreatedDate))


                                            </td>



                                        </tr>
                                    }

                                </table>
                            </center>
                        }
                        @using (Html.BeginForm("StudentlistExporttoexcel", "Admin", FormMethod.Post))
                        {
                            <input type="submit" value="Export to Excel" class="btn btn-primary" />
                        }
                    </div>
            </div>
        </div>

    </form>

</div>

