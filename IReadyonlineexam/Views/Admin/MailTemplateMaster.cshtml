@model IReadyonlineexam.Models.MailTemplateMaster

@{
    ViewBag.Title = "MailTemplateMaster";
    Layout = "~/Views/Admin/Shared/_AdminLayoutPage.cshtml";
}

<h4>Mail Template Master</h4>
@if (TempData["result"] != null)
{
    <script>
        alert("@TempData["result"]");
    </script>
}
<div id="rootwizard" class="wizard wizard-full-width">

    <form action="#" method="POST" name="wizard_form">

        <div class="wizard-content tab-content">

            <div class="tab-pane active" id="tab1">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">

                        <div class="col-md-6 offset-md-3">
                            <p class="desc m-b-20"></p>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <label class="control-label">Mail Subject Name<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.MailTitle, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            </div>
                            <div class="form-group">
                                <label class="control-label">Mail Description <span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.MailDescription, new { htmlAttributes = new { @class = "form-control", @rows = 5, required = "required" } })
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>

                        </div>
                    </div>

                }

                <div class="panel-body">
                    <h3>Mail Template Master</h3>
                    @if (ViewBag.Mail != null)
                    {
                        <center>
                            <table class="table table-striped m-b-0">
                                <tr>

                                    <th>
                                        Mail Subject Name
                                    </th>
                                    <th>
                                        Mail Description
                                    </th>
                                    <th>
                                        Created Date
                                    </th>
                                    <th>Edit | Delete</th>

                                </tr>

                                @foreach (var item in ViewBag.Mail)
                                {
                                    <tr>

                                        <td>
                                            @item.MailTitle
                                        </td>
                                        <td>
                                            @item.MailDescription
                                        </td>
                                        <td>
                                            @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.CreatedDate))

                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "EditMailTemplateMaster", new { id = item.MailID }) |
                                            @Html.ActionLink("Delete", "DeleteMailTemplateMaster", new { id = item.MailID })
                                        </td>


                                    </tr>
                                }

                            </table>
                        </center>
                    }
                </div>
            </div>
        </div>

    </form>

</div>

