@model IReadyonlineexam.Models.Smstemplate_master

@{
    ViewBag.Title = "Smstemplatemaster";
    Layout = "~/Views/Admin/Shared/_AdminLayoutPage.cshtml";
}
@if(TempData["result"] != null)
{
    <script>
        alert("@TempData["result"]");
    </script>
}

<h4>SMS Template master</h4>


<div id="rootwizard" class="wizard wizard-full-width">

    @*<form action="#" method="POST" name="wizard_form">*@

        <div class="wizard-content tab-content">

            <div class="tab-pane active" id="tab1">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">

                        <div class="col-md-6 offset-md-3">
                            <p class="desc m-b-20"></p>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <label class="control-label">Sms Title<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.smstemp_title, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            </div>
                            <div class="form-group">
                                <label class="control-label">Sms Description <span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.smstemp_description, new { htmlAttributes = new { @class = "form-control", @rows = 5, required = "required" } })
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>

                        </div>
                    </div>

                }

                <div class="panel-body">
                    <h3>SMS Template Master</h3>
                    @if (ViewBag.sms != null)
                    {
                        <center>
                            <table class="table table-striped m-b-0">
                                <tr>

                                    <th>
                                        SMS Titile
                                    </th>
                                    <th>
                                        SMS Description
                                    </th>
                                    <th>
                                        Created Date
                                    </th>
                                    <th>Edit | Delete</th>

                                </tr>

                                @foreach (var item in ViewBag.sms)
                                {
                                    <tr>

                                        <td>
                                            @item.smstemp_title
                                        </td>
                                        <td>
                                            @item.smstemp_description
                                        </td>
                                        <td>
                                            @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.CreatedDate))

                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "EditSmstemplatemaster", new { id = item.SmstemplateID }) |
                                            @Html.ActionLink("Delete", "DeleteSmstemplatemaster", new { id = item.SmstemplateID })
                                        </td>


                                    </tr>
                                }

                            </table>
                        </center>
                    }
                </div>
            </div>
        </div>

    @*</form>*@

</div>