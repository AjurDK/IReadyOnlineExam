@model IReadyonlineexam.Models.Question_details

@{
    ViewBag.Title = "DeleteMCQQUploaded";
    Layout = "~/Views/Admin/Shared/_AdminLayoutPage.cshtml";
}

<h2>DeleteMCQQUploaded</h2>
@if (ViewBag.result != null)
{
    <script>
        alert("@ViewBag.result");
    </script>
}

<div id="rootwizard" class="wizard wizard-full-width">

    <form action="#" method="POST" name="wizard_form">

        <div class="wizard-content tab-content">

            <div class="tab-pane active" id="tab1">
                @using (Html.BeginForm("EditMCQQuestionUploaded", "admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.quizid)

                    <div class="row">

                        <div class="col-md-6 offset-md-3">
                            <p class="desc m-b-20"></p>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                            <div class="form-group">
                                <label class="control-label">Question Number<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Q_no, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                <label class="control-label">Question Name<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Question_Name, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                <label class="control-label">A<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Q_op1, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                <label class="control-label">B<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Q_op2, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                <label class="control-label">C<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Q_op3, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                <label class="control-label">D<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Q_op4, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                <label class="control-label">Answer<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Q_Ans, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Delete" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>


                    </div>

                }



            </div>
        </div>

    </form>

</div>