            @model IReadyonlineexam.Models.MergeLoginRegister
            <div class="popup-holder">
                <div id="popup1" class="lightbox-demo" role="dialog">
                    <div class="user-log-form">
                        @if (TempData["em"] != null)
                        {
                        <P style="color:red">@TempData["em"].ToString()</P>
                        TempData.Clear();
                        }
                        <h2>Login Form</h2>
                        <div class="form-group">
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label class="control-label">Email</label>

                                    @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control", @required = "required", @type = "Email" })
                                    @Html.ValidationMessageFor(Model => Model.Email, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group">
                                    <label class="control-label ">Password</label>
                                    @Html.PasswordFor(Model => Model.Password, new { @class = "form-control", @required = "true", @type = "Password" })
                                    @Html.ValidationMessageFor(Model => Model.Password, "", new { @class = "text-danger" })
                                </div>
                             
                                <input type="submit" value="Log in" class="btn btn-primary" />

                                <div class="m-t-20" style="font-size:12px;">
                                    Not a member yet? <a href="#popup2" id="Rclose" data-dismiss="modal">Register!</a>
                                    <br />
                                    Forgot your ID or password? <a href="@Url.Action("ForgotPassword", "Account")">Click Here!</a>

                                </div>
                                <div class="m-t-20">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div id="popup2" class="lightbox-demo">
                    <div class="user-log-form">
                        @if (TempData["err"] != null)
                        {
                            <P style="color:red">@TempData["err"].ToString()</P>
                            TempData.Clear();
                        }
                        <h2>Register Form</h2>
                        <div class="form-group">
                            @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl, Roles = "Roles" }, FormMethod.Post, new { @class = "", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label class="control-label">Email</label>

                                    @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control", @required = "required", @type = "Email" })
                                    @Html.ValidationMessageFor(Model => Model.Email, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group">
                                    <label class="control-label ">Password</label>

                                    @Html.PasswordFor(Model => Model.Password, new { @class = "form-control", @required = "true", @type = "Password" })
                                    @Html.ValidationMessageFor(Model => Model.Password, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group">
                                    <label class="control-label ">Confirm Password</label>

                                    @Html.PasswordFor(Model => Model.ConfirmPassword, new { @class = "form-control", @required = "true", @type = "Password" })
                                    @Html.ValidationMessageFor(Model => Model.ConfirmPassword, "", new { @class = "text-danger" })

                                </div>
                                <input type="submit" value="Sign Up" class="btn btn-primary" />

                                <div class="m-t-20" style="font-size:12px;">
                                    Already Registered? <a href="#popup1" class="lightbox" id="Aaccount" data-dismiss="modal">Sign In</a>

                                </div>
                            }
                        </div>
                    </div>
                </div>

            </div>
            <script src="~/Scripts/jquery-3.3.1.min.js"></script>

            <script type="text/javascript">
                $("#openpopup1").click(function () {
                    $("#popup1").dialog({
                        modal: true,
                        width: 460,
                    });
                    event.preventDefault();
                })

                $("#openpopup2").click(function () {
                    $("#popup2").dialog({
                        modal: true,
                        width: 460,
                    });
                    event.preventDefault();
                })

            </script>


            <script type="text/javascript">
                $('#Aaccount').click(function () {
                    $("#popup1").dialog({
                        modal: true,
                        width: 460,
                    });
                    event.preventDefault();
                    $('#popup2').dialog('close');
                });

                $('#Rclose').click(function () {
                    $("#popup2").dialog({
                        modal: true,
                        width: 460,
                    });
                    event.preventDefault();
                    $('#popup1').dialog('close');
                });

            </script>

            @if (ViewBag.mes != null || Session["temp"] != null || Session["reg"] != null)
            {
                if (ViewBag.mes == "1" || Session["temp"] != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {

                            $("#popup1").dialog({
                                modal: true,
                                width: 460,
                            });
                            event.preventDefault();
                        }
                    </script>
                    Session.Clear();
                }
                else if (ViewBag.mes == "2" || Session["reg"] != null)
                {
                    <script type="text/javascript">

                        window.onload = function () {
                            $("#popup2").dialog({
                                modal: true,
                                width: 460,
                            });
                            event.preventDefault();
                        }
                    </script>
                    Session.Clear();
                }
            }


