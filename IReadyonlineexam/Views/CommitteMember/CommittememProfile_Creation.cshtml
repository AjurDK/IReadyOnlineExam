@model IReadyonlineexam.Models.CommitteeMembers_Profile

@{
    /**/

    ViewBag.Title = "CommittememProfile_Creation";
    Layout = "~/Views/Account/Shared/_AccountLayoutPage.cshtml";


}

<h2>Committe Member Profile</h2>
@if (ViewBag.result != null)
{
    <script>
        alert("@ViewBag.result");
    </script>
}

<!-- BEGIN register -->
<div class="register">
    <!-- BEGIN register-cover -->
    <div class="register-cover"></div>
    <!-- END register-cover -->
    <!-- BEGIN register-content -->
    <div class="register-content">
        <!-- BEGIN register-brand -->
        <div class="register-brand">
            <a href="#"><span class="logo"><i class="ti-infinite"></i></span> Ireadytoday Admin</a>
        </div>
        <!-- END register-brand -->
        <h3 class="m-b-20"><span>Committe member profile </span></h3>
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <hr />

            <div class="row">

                <div class="col-md-8 offset-md-3">
                    <p class="desc m-b-20"></p>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label class="control-label">Member Name<span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            Male
                            @Html.RadioButtonFor(model => model.Gender, "Male")
                            Female
                            @Html.RadioButtonFor(model => model.Gender, "Female")
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Mobile Number<span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        <label class="control-label">Select Category Name</label>


                        @Html.DropDownListFor(model => model.CourseID, (IEnumerable<SelectListItem>)ViewBag.selectedcourse as SelectList, new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        <label class="control-label">Qualification<span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.Qualification, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Address<span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @rows = 5 } })
                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>

                </div>

            </div>
        }
    </div>
</div>

    