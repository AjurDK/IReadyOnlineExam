@model IEnumerable<IReadyonlineexam.Models.JobModel>

@{
    ViewBag.Title = "JobNotification";
    Layout = "~/Views/Student/Shared/_StudentLayoutPage.cshtml";
}

<style>
    .pre {
        font-size: 0.800rem;
        font-weight: 400;
    }
</style>

<!-- BEGIN panel -->
<div class="panel panel-default">
    <!-- BEGIN panel-heading -->
    <div class="panel-heading">
        <h3 style="font-weight: 400;">Job Notification</h3>
    </div>
    <!-- END panel-heading -->
    <!-- BEGIN panel-body -->
    <div class="panel-body">
        <p class="desc">stay tuned for latest updates.</p>
        <!-- BEGIN row -->
        <div class="row">

            <!-- BEGIN col-4 -->
            @{int a = 0;}
            @foreach (var item in Model)
            {
                a++;
                <div class="col-md-4">
                    <div class="card" style="border: 1px solid #a5a9ad;">
                        <div class="card-body">
                            @*<h4 class=""><b>#@a</b></h4>*@

                            <h5 class="btn bg-gradient-aqua-dark"><b>#@a</b> &nbsp;Designation : @item.Designation </h5>
                            <h5 class="pre">Company Name : @item.CompanyName </h5>
                            <h5 class="pre">Location : @item.Location </h5>
                            <h5 class="pre">Scheduled Date :  @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.ScheduledDate)) </h5>

                            <hr />
                            <h5 class="pre">@item.Description</h5>
                            <h5 class="pre">Course : @item.CourseName </h5>
                            <h5 class="pre">Year : @item.YearName </h5>
                        </div>

                        <div class="card-footer text-muted">
                            <a href="#" class="card-link">@item.CreatedDate</a>
                            <a href="#" class="card-link" style="float:right;"> @item.Days Days ago</a>
                        </div>
                    </div>
                </div>
            }
            <!-- END col-4 -->

        </div>
        <!-- END row -->

    </div>
    <!-- END panel-body -->
</div>
<!-- END panel -->