@model IReadyonlineexam.Models.StudentReview

@{
    ViewBag.Title = "StudentFeedback";
    Layout = "~/Views/Student/Shared/_StudentLayoutPage.cshtml";
}



<div class="view-header">
    <div class="pull-right text-right" style="line-height: 14px">
        <a href="/student"><small>  <i class="ti-back-left"></i> Dashboard </small></a>
    </div>
    <div class="header-icon">
        <i class="ti-face-smile"></i>
    </div>
    <div class="header-title">
        <h3 class="">Student Feedback</h3>
        <small>
            feedbacks
        </small>
    </div>
</div>


@if (ViewBag.result != null)
{
    <script>
        alert("@ViewBag.result");
    </script>
}


<div id="rootwizard" class="wizard wizard-full-width">

    <form action="#" method="POST" name="wizard_form">

        <div class="wizard-content tab-content">

            <div class="tab-pane active" id="tab1">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <br />
                    <div class="row">

                        <div class="col-md-6 offset-md-3">
                            <p class="desc m-b-20"></p>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            
                            <div class="form-group">
                                <label class="control-label"> FeedBack Description <span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.ReviewDescription, new { htmlAttributes = new { @class = "form-control", @rows = 5 } })
                            </div>



                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>

                        </div>
                    </div>

                }

                <div class="panel-body">
                    <h3>Student Reviews</h3>
                    <center>
                        <table class="table table-striped m-b-0">
                            <tr>
                                <th>
                                    Review Description
                                </th>
                                <th>
                                    Created Date
                                </th>
                            </tr>

                            @foreach (var item in ViewBag.StuFeedback)
                            {
                                <tr>
                                    <td>
                                        @item.ReviewDescription
                                    </td>
                                    <td>
                                        @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.CreatedDate))

                                    </td>

                                </tr>
                            }

                        </table>
                    </center>

                </div>


            </div>
        </div>

    </form>

</div>

