@model IReadyonlineexam.Models.CourseModel

@{
    ViewBag.Title = "Studentadditionalrequest";
    Layout = "~/Views/Student/Shared/_StudentLayoutPage.cshtml";
}

<h4>Additional Question Request</h4>

@if (ViewBag.result != null)
{
    <script>
        alert("@ViewBag.result");
    </script>
}

<div id="rootwizard" class="wizard wizard-full-width">

    <form action="#" method="POST" name="wizard_form">

        <div class="wizard-content tab-content">

            <div class="tab-pane active" id="tab1">
                @using (Html.BeginForm("Studentadditionalrequest","Student"))
                {
                    @Html.AntiForgeryToken()
                    <h3 class="m-b-20" style="color:red"><span><b>STUDENT ADDITIONAL QUESTION REQUEST</b> </span></h3>
                    <div class="row">

                        <div class="col-md-6 offset-md-3">
                            <p class="desc m-b-20"></p>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                           
                            <div class="form-group">
                                <label class="control-label">Year</label>
                                @Html.DropDownListFor(model => model.Year, (IEnumerable<SelectListItem>)ViewBag.selectedyear, " -- Select Year --", new { @class = "form-control", required="required" })

                            </div>
                         

                            <div class="form-group">
                                <label class="control-label">Subject</label>
                                @Html.DropDownListFor(Model => Model.Subject, (IEnumerable<SelectListItem>)ViewBag.selectedsubject as SelectList, new { @class = "form-control", required="required"})
                            </div>
                            <div class="form-group">
                                <label class="control-label">Description <span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @rows = 5 , required="required"} })
                            </div>



                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>

                        </div>
                    </div>

                }


                <div class="panel-body">
                    @if (ViewBag.list != null)
                    {
                    <center>
                        <table class="table table-striped m-b-0">
                            <tr>

                                <th>
                                    Year
                                </th>

                                <th>
                                    Category
                                </th>
                                <th>
                                    Semester
                                </th>
                                <th>
                                    Course
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Created Date
                                </th>


                            </tr>

                            @foreach (var item in ViewBag.list)
                            {
                                <tr>
                                    <td>
                                        @item.YearName
                                    </td>
                                    <td>
                                        @item.CourseName
                                    </td>
                                    <td>
                                        @item.SemName
                                    </td>
                                    <td>
                                        @item.SubjectName
                                    </td>
                                    <td>
                                        @item.AQDescription
                                    </td>



                                    <td>
                                        @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.CreatedDate))


                                    </td>



                                </tr>
                            }

                        </table>
                    </center>
                    }
                </div>

            </div>
        </div>

    </form>

</div>





