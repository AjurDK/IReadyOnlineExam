@model IReadyonlineexam.Models.StudentProfile

@{
    Layout = null;
}
<h4>Student registration </h4>
@if (ViewBag.result != null)
{
    <script>
        alert("@ViewBag.result");
    </script>
}
<!DOCTYPE html>


<head>
    <meta name="viewport" content="width=device-width" />
    
</head>
<div id="rootwizard" class="wizard wizard-full-width">

    <form action="#" method="POST" name="wizard_form">

        <div class="wizard-content tab-content">

            <div class="tab-pane active" id="tab1">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <h4>StudentProfile</h4>
                    <hr />

                    <div class="row">

                        <div class="col-md-6 offset-md-3">
                            <p class="desc m-b-20"></p>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <label class="control-label">Student Name<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    Male
                                    @Html.RadioButtonFor(model => model.Gender, "Male")
                                    Female
                                    @Html.RadioButtonFor(model => model.Gender, "Female")
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label">Date Of Birth<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                <label class="control-label">Mobile Number<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            @*<div class="form-group">
                                <label class="control-label">Email iD<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control" } })
                            </div>*@
                            

                            <div class="form-group">
                                <label class="control-label">Select Semester </label>
                                @Html.DropDownListFor(model => model.Semester, (IEnumerable<SelectListItem>)ViewBag.selectedsem as SelectList, new { @class = "form-control" })
                            </div>

                           
                            <div class="form-group">
                                <label class="control-label">Select Category Name</label>


                                @Html.DropDownListFor(model => model.Course, (IEnumerable<SelectListItem>)ViewBag.selectedcourse as SelectList, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                <label class="control-label">Address<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @rows = 5 } })
                            </div>


                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>

                        </div>

                    </div>
                }
            </div>
        </div>

    </form>
</div>


