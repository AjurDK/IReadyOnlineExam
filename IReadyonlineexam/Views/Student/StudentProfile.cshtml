@model IReadyonlineexam.Models.CourseModel

@{
    ViewBag.Title = "StudentProfile";
    Layout = "~/Views/Student/Shared/_StudentLayoutPage.cshtml";
}

<h4>Student Profile</h4>
@if (ViewBag.result != null)
    {
        <script>
            alert("@ViewBag.result");
        </script>
    }

    <br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">

            <div class="col-md-6 offset-md-3">
                <p class="desc m-b-20"></p>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>

    }

        <div class="panel-body">
            @if (ViewBag.studentprofile != null)
            { 
                <center>
                    <table class="table table-striped m-b-0">
                        <tr>

                            <th>
                                Name
                            </th>

                            <th>
                                Gender
                            </th>
                            <th>
                                DOB
                            </th>
                            <th>
                                Mobile Number
                            </th>
                            <th>
                                Email ID
                            </th>

                            <th>
                                Category
                            </th>
                            <th>
                                Semester
                            </th>

                            <th>
                                Address
                            </th>
                            <th>
                                Created Date
                            </th>
                        </tr>

                        @foreach (var item in ViewBag.studentprofile)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Gender
                                </td>
                                <td>
                                    @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.DOB))
                                </td>
                                <td>
                                    @item.MobileNumber
                                </td>
                                <td>
                                    @item.Email
                                </td>

                                <td>
                                    @item.CourseName
                                </td>
                                <td>
                                    @item.SemName
                                </td>

                                <td>
                                    @item.Address
                                </td>
                                <td>
                                    @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.CreatedDate))

                                </td>



                            </tr>
                        }
                       
                    </table>
                </center>
            }
        </div>





