@model IReadyonlineexam.Models.StudentProfile



@{
    ViewBag.Title = "Studentregistration";
    Layout = "~/Views/Account/Shared/_AccountLayoutPage.cshtml";
}


<h4>Student Registration</h4>

@if (ViewBag.result != null)
{
    <script>
        alert("@ViewBag.result");
    </script>
}




<div class="register">

    <div class="register-cover"></div>

    <div class="register-content">

       

        <center><h3 class="m-b-20"><span>STUDENT PROFILE</span></h3></center>
        <br />
        @using (Html.BeginForm("Studentregistration", "Student", FormMethod.Post, new { ImageFile = "ImageFile", enctype = "multipart/form-data" }))

        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <hr />

            <div class="row">

                <div class="col-md-8 offset-md-3">
                    <p class="desc m-b-20"></p>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label class="control-label">Student Name<span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control",required="required" } })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            Male
                            @Html.RadioButtonFor(model => model.Gender, "Male")
                            Female
                            @Html.RadioButtonFor(model => model.Gender, "Female")
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label">DOB<span class="text-danger">*</span></label>
                        <input type="date" id="interviewdate" name="interviewdate" class="form-control" required="required"/>

                    </div>

                    <div class="form-group">
                        <label class="control-label">Mobile Number<span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "form-control" , required = "required" } })
                    </div>

                    <div class="form-group">
                        <label class="control-label">Select Category Name</label>
                        @Html.DropDownListFor(model => model.Course, ViewBag.state as List<SelectListItem>, new { @class = "form-control", style = "color:black;background:#8a8a8f", required = "required" })

                    </div>
                    <div class="form-group">
                        <label class="control-label">Select Semester </label>
                        @Html.DropDownListFor(model => model.Semester, new SelectList(string.Empty, "Value", "Text"), "----Select Semester----", new { @class = "form-control", style = "color:black;background:#8a8a8f", required = "required" })
                    </div>

                    <div class="form-group">
                        <label class="control-label">College Name<span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.CollegeName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Address<span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @rows = 5 , required = "required" } })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Image <span class="text-danger">*</span></label>
                        <input type="file" id="ImageFile" name="ImageFile" placeholder="Upload Image" accept="image/*" required="required" />
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>

                </div>

            </div>
        }
        <script src="~/Scripts/jquery-3.3.1.min.js"></script>
        <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
        <script type="text/javascript">



    $(document).ready(function () {

        $("#Course").change(function () {
            $("#Semester").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Getcity")',
                dataType: 'json',
                data: { id: $("#Course").val() },
                success: function (city) {

                    $.each(city, function (i, city) {
                        $("#Semester").append('<option value="'+ city.Value + '">' + city.Text + '</option>');
                    });
                },
                error: function (ex) {
                    alert('Failed.' + ex);
                }
            });
            return false;
        })
    });
        </script>

    </div>
</div>








