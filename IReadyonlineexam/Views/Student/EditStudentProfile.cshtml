@{
    ViewBag.Title = "EditStudentProfile";
    Layout = "~/Views/Student/Shared/_StudentLayoutPage.cshtml";
}



<style type="text/css">

    .textarea {
        background: rgba(255, 255, 255, 0.3);
        border-color: transparent;
        color: rgb(255, 255, 255);
        width: 100%;
        padding: 0.375rem 0.75rem;
        overflow: auto;
        resize: vertical;
    }
</style>

@Html.Raw(TempData["AlertBox"])

<!-- BEGIN register -->
<div class="register">
