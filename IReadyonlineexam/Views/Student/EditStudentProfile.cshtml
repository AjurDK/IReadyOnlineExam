                            @Html.RadioButtonFor(model => model.Gender, "Female", new { @class = "text-danger", @readonly = "true", required = "required" })
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">Address <span class="text-danger">*</span></label>

                        @Html.TextAreaFor(model => model.Address, new { @class = "form-control textarea", @placeholder = "Skills", required = "required" })

                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
