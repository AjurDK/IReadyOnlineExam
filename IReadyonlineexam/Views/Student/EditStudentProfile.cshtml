                    </div>*@
                </div>

                <div class="col-md-6">

                    <div class="form-group">
                        <label class="control-label">Contact Number <span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contact No", required = "required" } })
                        @Html.ValidationMessageFor(model => model.MobileNumber, "", new { @class = "text-danger" })
                    </div>
                    @*<div class="form-group">
            <label class="control-label">Date of Birth <span class="text-danger">*</span></label>
            @if (Model.DOB != null)
            {<p>@(((DateTime)Model.DOB).ToString("yyyy-MM-dd"))</p>}
            <input type="date" id="DOB" name="DOB" placeholder="select DOB" class="form-control text-box single-line" required="required" />
        </div>*@
