@model IReadyonlineexam.Models.Question_details

@{
    ViewBag.Title = "StartQuiz";
    Layout = "~/Views/Student/Shared/_EmptyLayoutPage1.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
  <div class="row">
      <div class="container" style="margin:0 auto">
          <div class="row">
              <h1>@Html.DisplayFor(x => x.Question_Name)</h1>
          </div>
          <div class="row">
              <h3>@Html.RadioButtonFor(x => x.Q_op1, new { @class = "form-control" })@Model.Q_op1</h3>
          </div>
          <div class="row">
              <h3>@Html.RadioButtonFor(x => x.Q_op2, new { @class = "form-control" })@Model.Q_op2</h3>
          </div>
          <div class="row">
              <h3>@Html.RadioButtonFor(x => x.Q_op3, new { @class = "form-control" })@Model.Q_op3</h3>
          </div>
          <div class="row">
              <h3>@Html.RadioButtonFor(x => x.Q_op4, new { @class = "form-control" })@Model.Q_op4</h3>
          </div>

          <div class="row">
              <input type="submit" value="submit" class="btn btn-success" />
          </div>

      </div>

  </div>  
  
}

