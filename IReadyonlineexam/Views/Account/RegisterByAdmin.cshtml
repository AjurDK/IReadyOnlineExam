@model IReadyonlineexam.Models.RegisterViewModel

@{
    ViewBag.Title = "RegisterByAdmin";
    Layout = "~/Views/Account/Shared/_AccountLayoutPage.cshtml";
}

<h2>RegisterByAdmin</h2>

<div class="login">
    <!-- BEGIN login-cover -->
    <div class="login-cover"></div>
    <!-- END login-cover -->
    <!-- BEGIN login-content -->

    <div class="login-content">
        <!-- BEGIN login-brand -->

        <div class="login-brand">
            <a href="#"><span class="logo"><i class="ti-infinite"></i></span> IReadyToday</a>
        </div>
        <!-- END login-brand -->
        <!-- BEGIN login-desc -->
        <div class="login-desc">
           
        </div>
        <!-- END login-desc -->
        <!-- BEGIN login-form -->
        <section id="loginForm" name="login_form">
            @using (Html.BeginForm("RegisterByAdmin", "Account", new { ReturnUrl = ViewBag.ReturnUrl, Roles = "Roles" }, FormMethod.Post, new { @class = "", role = "form" }))
            {
                @Html.AntiForgeryToken()


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="from-group">
                        <label class="control-label">Registered By</label>

                        @Html.DropDownList("Roles", (IEnumerable<SelectListItem>)ViewBag.RolesList, " -- Select RegisteredBy --", new { @class = "form-control", style = "color:black;background:#8a8a8f" })
                    </div>

                <div class="form-group">
                    <label class="control-label">Email</label>

                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    <label class="control-label ">Password</label>

                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <label class="control-label ">Confirm Password</label>

                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

                </div>

                <div class="m-b-10 m-t-10">
                    <div class="checkbox-inline">
                        <input type="checkbox" id="login-remember-me" value="2"> <label for="login-remember-me">I have read and agree to the <a href="#">Terms of Use</a> and <a href="#">Privacy Policy</a>.</label>
                    </div>
                </div>

                <input type="submit" value="Sign Up" class="btn btn-primary" />

                <div class="m-t-20">
                    Already have an Adobe ID? <a href="page_login.html">Sign In</a>
                    @Html.ActionLink(" Already have an Account", "Login")
                </div>
            }
        </section>

        <!-- END login-form -->

    </div>
    <!-- END login-content -->
</div>
